<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/recycler_user_list_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/recycler_user_list_image_view"
        android:layout_toEndOf="@+id/recycler_user_list_image_view"
        android:id="@+id/recycler_user_list_text_view"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:background="@drawable/background_left"
        android:backgroundTint="#EDDB37"
        android:id="@+id/status_on_image_view_user_list_row"
        android:layout_below="@+id/recycler_user_list_text_view"
        android:layout_toRightOf="@+id/recycler_user_list_image_view"
        android:layout_toEndOf="@+id/recycler_user_list_image_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-10dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:background="@drawable/background_left"
        android:backgroundTint="#C6B5B4"
        android:id="@+id/status_off_image_view_user_list_row"
        android:layout_below="@+id/recycler_user_list_text_view"
        android:layout_toRightOf="@+id/recycler_user_list_image_view"
        android:layout_toEndOf="@+id/recycler_user_list_image_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-10dp"/>


</RelativeLayout>