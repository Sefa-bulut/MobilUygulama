<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopUpCheckInActivity"
    android:gravity="center"
    android:background="#29db2f"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        >
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:padding="10dp"
                android:textSize="12sp"
                android:text="Müsait olduğun bir günü belirle ve check-in oluştur. Bu sayede diğer oyuncuların seni bulmasını sağlayabilirsin."
                android:textAlignment="center" />

            <LinearLayout
                android:background="@drawable/custom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_account"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/user_name_txt_pop_up_check_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:background="@drawable/style_text_view"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/custom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_soccer_ball"
                    android:layout_marginLeft="5dp"
                    />
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/style_spinner"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/custom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_date_range"
                    android:layout_marginLeft="5dp"
                    />
                <Button
                    android:id="@+id/pick_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Müsait günün"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/style_text_view"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/show_date_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />

            <ProgressBar
                android:id="@+id/pop_up_progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/check_in_btn_pop_up_check_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Check-in Oluştur"
                android:textColor="@color/white"
                android:backgroundTint="#29db2f"
                />

            <Button
                android:id="@+id/cancel_btn_pop_up_check_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="iptal"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                />

        </LinearLayout>
    
    </androidx.cardview.widget.CardView>


</RelativeLayout>